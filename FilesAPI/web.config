<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <location path="." inheritInChildApplications="false">
    <system.webServer>
      <!-- Configure ASP.NET Core Module -->
      <handlers>
        <add name="aspNetCore" path="*" verb="*" modules="AspNetCoreModuleV2" resourceType="Unspecified" />
      </handlers>
      <aspNetCore processPath="dotnet" arguments=".\FilesAPI.dll" stdoutLogEnabled="false" stdoutLogFile=".\logs\stdout" hostingModel="inprocess" />
      
      <!-- Configure unlimited file upload for IIS -->
      <security>
        <requestFiltering>
          <!-- Remove file size limit (default is 30MB) -->
          <requestLimits maxAllowedContentLength="4294967295" />
        </requestFiltering>
      </security>
      
      <!-- Configure timeout for large file uploads -->
      <system.web>
        <!-- Set execution timeout to 1 hour (3600 seconds) for large uploads -->
        <httpRuntime maxRequestLength="4194304" executionTimeout="3600" />
      </system.web>
    </system.webServer>
  </location>
</configuration>
